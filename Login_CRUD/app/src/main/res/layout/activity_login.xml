<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="16dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/iniciar_sesion" />

        <EditText
            android:id="@+id/mail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="@string/mail"
            android:inputType="textEmailAddress" />

        <EditText
            android:id="@+id/contrasenia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="@string/contrasenia"
            android:inputType="textPassword" />


        <com.google.android.gms.common.SignInButton
            android:id="@+id/gmail"
            android:layout_width="157dp"
            android:layout_height="60dp"
            android:layout_marginTop="164dp" />

        <com.facebook.login.widget.LoginButton
            android:id="@+id/login_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="30dp" />

        <Button
            android:id="@+id/olvideContrasenia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/me_olvide_la_contrasenia" />

        <Button
            android:id="@+id/confirmarInicio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/iniciarr" />

        <Button
            android:id="@+id/registrarseConMail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/registrarse_con_mail" />




    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>