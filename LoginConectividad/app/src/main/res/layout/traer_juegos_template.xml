<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical">

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="473dp">

    <LinearLayout
        android:id="@+id/llBotonera"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    </LinearLayout>
</ScrollView>



<TextView
    android:id="@+id/textoCargando"
    android:layout_width="152dp"
    android:layout_height="wrap_content"
    android:text="@string/textoCargando"
    android:visibility="invisible" />

<TextView
    android:id="@+id/claveRed"
    android:layout_width="223dp"
    android:layout_height="wrap_content"
    android:text="@string/claveRed"
    android:visibility="invisible" />

<TextView
    android:id="@+id/nombreRed"
    android:layout_width="223dp"
    android:layout_height="wrap_content"
    android:text="@string/nombreRed"
    android:visibility="invisible" />

<TextView
    android:id="@+id/cantidadEquipos"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="@string/cantidadEquipos"
    android:visibility="invisible" />

<Button
    android:id="@+id/botonComenzarPartida"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="@string/botonComenzarPartida"
    android:visibility="invisible" />

</LinearLayout>